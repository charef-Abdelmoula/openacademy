<odoo>
  <data>
    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="first_module.action_window">
      <field name="name">first_module window</field>
      <field name="res_model">first_module.first_module</field>
      <field name="view_mode">tree,form</field>
    </record>
    <!-- Top menu item :root_menu-->
    <menuitem name="OPEN Academy" id="first_module.menu_root"/>
    <!-- menu categories -->
    <menuitem name="Students" id="first_module.menu_1" parent="first_module.menu_root"/>
    <!-- actions -->
    <menuitem name="All students" id="first_module.menu_1_list" parent="first_module.menu_1"
              action="first_module.action_window"/>

  </data>
</odoo>